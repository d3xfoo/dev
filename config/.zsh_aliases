alias chex="chmod +x"
alias i3conf="vim ~/.config/i3/config"
alias vimconf="cd ~/.config/nvim/ && nvim"
alias caps="setxkbmap -option caps:escape"
alias tsn="ts-node"

#Brightness
alias brt+="brightnessctl set +10%"
